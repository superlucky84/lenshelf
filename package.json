{
  "type": "module",
  "private": true,
  "name": "state-ref-root",
  "version": "0.0.1",
  "description": "X UI Library Universal State Management Library",
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "watch:core": "vite build --watch",
    "dev:core": "pnpm --filter state-ref dev",
    "dev:preact": "pnpm watch:core & pnpm --filter @state-ref/connect-preact dev",
    "dev:react": "pnpm watch:core & pnpm --filter @state-ref/connect-react dev",
    "dev:vue": "pnpm watch:core & pnpm --filter @state-ref/connect-vue dev",
    "dev:svelte": "pnpm watch:core & pnpm --filter @state-ref/connect-svelte dev",
    "dev:solid": "pnpm watch:core & pnpm --filter @state-ref/connect-solid dev",

    "build:core": "pnpm --filter state-ref build",
    "build:!core": "pnpm --filter '!state-ref' build",
    "build:preact": "pnpm --filter @state-ref/connect-preact build",
    "build:react": "pnpm --filter @state-ref/-connect-react build",
    "build:vue": "pnpm --filter @state-ref/connect-vue build",
    "build:svelte": "pnpm --filter @state-ref/connect-svelte build",
    "build:solid": "pnpm --filter @state-ref/connect-solid build",
    "build": "pnpm build:core && pnpm build:!core",

    "test": "pnpm -r test",
    "test:core": "pnpm --filter state-ref test",
    "test:core:dev": "pnpm --filter state-ref test:dev",
    "test:preact": "pnpm --filter @state-ref/connect-preact test",
    "test:preact:dev": "pnpm --filter @state-ref/connect-preact test:dev",
    "test:react": "pnpm --filter @state-ref/connect-react test",
    "test:react:dev": "pnpm --filter @state-ref/connect-react test:dev",
    "test:vue": "pnpm --filter @state-ref/connect-vue test",
    "test:vue:dev": "pnpm --filter @state-ref/connect-vue test:dev",
    "test:svelte": "pnpm --filter @state-ref/connect-svelte test",
    "test:svelte:dev": "pnpm --filter @state-ref/connect-svelte test:dev",
    "test:solid": "pnpm --filter @state-ref/connect-solid test",
    "test:solid:dev": "pnpm --filter @state-ref/connect-solid test:dev",

    "clean": "pnpm clean:dist && pnpm clean:module",
    "clean:dist": "pnpm -r exec rm -rf dist && rm -rf dist",
    "clean:module": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules"
  },
  "author": "superlucky84",
  "repository": {
    "type": "git",
    "url": "https://github.com/superlucky84/state-ref.git"
  },
  "homepage": "https://github.com/superlucky84/state-ref",
  "license": "MIT",
  "keywords": [
    "state-ref"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "happy-dom": "^9.20.3",
    "jsdom": "^22.1.0",
    "lithent": "^1.13.1",
    "prettier": "^2.8.8",
    "terser": "^5.18.1",
    "typescript": "^4.9.5",
    "vite": "^5.4.8",
    "vite-plugin-checker": "^0.6.1",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^2.1.2"
  },
  "volta": {
    "node": "20.3.0"
  }
}
